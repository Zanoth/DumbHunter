<UserControl x:Class="Wpf.Design.Controls.SharpnessIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:weapons="clr-namespace:SharedDataModels.Abstractions.Gear.Weapons;assembly=SharedDataModels.Abstractions"
             xmlns:controls="clr-namespace:Wpf.Design.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <ItemsControl ItemsSource="{TemplateBinding Sections}">
    <ItemsControl.ItemTemplate>
      <DataTemplate DataType="{x:Type weapons:SharpnessSection}">
        <controls:SharpnessSectionIndicator Color="{Binding Color}"
                                            Value="{Binding Value}" />
      </DataTemplate>
    </ItemsControl.ItemTemplate>
  </ItemsControl>
</UserControl>
