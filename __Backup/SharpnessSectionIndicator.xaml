<UserControl x:Class="Wpf.Design.Controls.SharpnessSectionIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Wpf.Design.Controls"
             xmlns:weapons="clr-namespace:SharedDataModels.Abstractions.Gear.Weapons;assembly=SharedDataModels.Abstractions"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type weapons:SharpnessSection}}">
  <StackPanel>
    <TextBlock Text="{Binding Color}"/>
    <TextBlock Text="{Binding Value}"/>
  </StackPanel>
</UserControl>
