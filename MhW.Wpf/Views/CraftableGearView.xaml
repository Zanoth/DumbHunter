<UserControl x:Class="MhW.Wpf.Views.CraftableGearView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MHW.Wpf.ViewModels"
             xmlns:armors="clr-namespace:SharedDataModels.Abstractions.Gear.Armors;assembly=SharedDataModels.Abstractions"
             xmlns:converters="clr-namespace:MHW.Wpf.Converters"
             xmlns:mvvm="http://prismlibrary.com/"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             
             d:DataContext="{d:DesignInstance viewModels:CraftableGearViewModel, IsDesignTimeCreatable=False}">
  <Grid Background="Green">
    <ListView ItemsSource="{Binding Armors, Converter={converters:DebugConverter}}">
      <ListView.ItemTemplate>
        <DataTemplate DataType="{x:Type armors:Armor}">
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
