<Window x:Class="MHW.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MHW.Wpf.ViewModels"
        xmlns:regions="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:MainWindowViewModel}}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="4*" />
    </Grid.RowDefinitions>

    <HeaderedContentControl Header="Navigation">
      <StackPanel Orientation="Horizontal">

        <Button Content="Gear Management"
                Command="{Binding NavigateToGearManagementCommand}" />
        <Button Content="Monster List"
                Command="{Binding NavigateToMonsterListCommand}" />
      </StackPanel>
    </HeaderedContentControl>

    <ContentControl Grid.Row="1"
                    regions:RegionManager.RegionName="MainRegion" />

  </Grid>
</Window>
