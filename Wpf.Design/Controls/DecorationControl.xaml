<UserControl x:Class="Wpf.Design.Controls.DecorationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:abstractions="clr-namespace:SharedDataModels.Abstractions;assembly=SharedDataModels.Abstractions"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type abstractions:DecorationSlot}}">
  <StackPanel>
    <TextBlock Text="{Binding SlotLevel, Mode=OneWay}" />
    <TextBlock Text="{Binding AssignedDecorationId.Id}"/>
  </StackPanel>
</UserControl>
